# Standalone CIU test project

[ciu]
workspace_env_file = ".env.ciu"
standalone_root = true
require_fqdn = false
require_certs = false

[deploy]
project_name = "standalone-ciu"
environment_tag = "dev"
network_name = "$DOCKER_NETWORK_INTERNAL"
log_level = "INFO"

[deploy.env.defaults]
TZ = "UTC"
PYTHONUNBUFFERED = "1"

[deploy.env.shared]
CONTAINER_UID = "$CONTAINER_UID"
CONTAINER_GID = "$CONTAINER_GID"
DOCKER_GID = "$DOCKER_GID"
