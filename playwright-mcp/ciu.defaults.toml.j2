# ==========================================================================
# Playwright MCP stack defaults (standalone)
# ==========================================================================

[playwright_mcp]
name = "playwright-mcp"

[playwright_mcp.image]
registry = "ghcr.io"
namespace = "volkb79-2"
name = "playwright-mcp"
tag = "latest"

[playwright_mcp.ports]
ws_internal = 3000
mcp_internal = 8765
health_internal = 8081

ws_external = 3000
mcp_external = 8765
health_external = 8081

expose_ws = false
expose_mcp = false
expose_health = false

[playwright_mcp.runtime]
auth_required = true
access_token = "ASK_EXTERNAL:ACCESS_TOKEN"
ws_auth_token = ""
mcp_auth_token = ""

ws_max_sessions = 20
ws_session_timeout = 3600

playwright_headless = true
playwright_browser = "chromium"

mcp_enabled = true
mcp_server_name = "playwright-mcp"
mcp_allowed_hosts = "localhost,127.0.0.1"
mcp_allowed_origins = "http://localhost,http://127.0.0.1"

[playwright_mcp.health]
enabled = true
socket_timeout = 2
selftest_url = "https://www.google.de"
selftest_timeout = 5

[playwright_mcp.volumes]
screenshots_dir = "./vol-screenshots"
workspaces_dir = "./vol-workspaces"
certs_dir = "./certs"

[reverse_proxy]
enabled = true
public_fqdn = "example.com"
letsencrypt_dir = "/etc/letsencrypt"
https_port = 443
http_enabled = false
http_port = 80

[playwright_mcp.hooks]
pre_compose = []
post_compose = []

[state]
initialized = false
