# Playwright MCP Standalone - Sample Environment
# Copy to .env and fill required values.

# Image naming (Buildx Bake)
REGISTRY=ghcr.io
NAMESPACE=volkb79-2
IMAGE_NAME=playwright-mcp
BUILD_DATE=20260125
VERSION=latest

# Ports (host bindings for direct access; not used when proxy-only)
WS_EXTERNAL_PORT=3000
MCP_EXTERNAL_PORT=8765
HEALTH_EXTERNAL_PORT=8081

# Internal service ports
WS_PORT=3000
MCP_PORT=8765
HEALTH_PORT=8081

# Authentication (REQUIRED in production)
AUTH_REQUIRED=true
ACCESS_TOKEN=change-me-set-a-strong-token
# Optional overrides
# WS_AUTH_TOKEN=
# MCP_AUTH_TOKEN=

# MCP security
MCP_ALLOWED_HOSTS=localhost,127.0.0.1
MCP_ALLOWED_ORIGINS=http://localhost,http://127.0.0.1
MCP_SERVER_NAME=playwright-mcp

# Playwright runtime
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_BROWSER=chromium
WS_MAX_SESSIONS=20
WS_SESSION_TIMEOUT=3600

# Health server
HEALTH_ENABLED=true
HEALTH_SOCKET_TIMEOUT=2
SELFTEST_URL=https://www.google.de
SELFTEST_TIMEOUT=5

# TLS (direct exposure only; reverse proxy recommended)
SSL_ENABLED=false
SSL_CERT_PATH=/certs/server.crt
SSL_KEY_PATH=/certs/server.key

# Reverse proxy (optional)
PUBLIC_FQDN=example.com
LETSENCRYPT_DIR=/etc/letsencrypt
REVERSE_PROXY_HTTP_PORT=80
REVERSE_PROXY_HTTPS_PORT=443

# Volumes
SCREENSHOTS_DIR=./vol-screenshots
WORKSPACES_DIR=./vol-workspaces
CERTS_DIR=./certs
